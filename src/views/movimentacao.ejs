    <script>
      $(document).ready(function(){
        $("#searchUsuario").on("keyup", function() {
          var value = $(this).val().toLowerCase();
          value = replaceSpecialChars(value)
          $(".dropdown-menu li").filter(function() {
            var value2 = replaceSpecialChars($(this).text().toLowerCase())
            $(this).toggle(value2.indexOf(value) > -1)
          });
        });
      });
    </script>
    
  </head>
  <body id="page-movimentacao">

    <%- include('parts/header', {
      button_text:'vazio',
      button_link:''
      }) %>
    
    <div class="container flex animate-up delay-2">
      <main>
        <form id="form-movimentacao"
          method="POST"
          action="/movimentacao" >
          <fieldset>
            <legend>Dados da Movimentação</legend>

            <div class="input-wrapper">
              <h4>
                Usuário selecionado: 
                <% if (usuarioMovimentacao) { %>
                  <%= usuarioMovimentacao.nome %>
                <% } %>
              </h4>
            </div>

