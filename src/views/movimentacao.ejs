                            <input class="form-control" id="searchUsuario" type="text" placeholder="Busque o consumidor..">
                              <% usuarios.forEach(usuario => { %>
                                <li><a href="?usr=<%= usuario.id %>"><%= usuario.nome %></a></li>
                              <% }) %>
                          </ul>
                        </div>
                    </div>
              <% }} %>-->
            
            <div class="input-wrapper">
              <label for="data">Data?</label>
              <input
                type="datetime-local"
                id="data"
                name="data"
                value="<%= ( (movimentacao.data) ? (movimentacao.data.toISOString().substr(0,16)) : null) %>"
              />
            </div>

            <div class="input-wrapper">
              <label for="tipoMovimentacaoId">Movimentação?</label>
              <input
                type="number"
                id="tipoMovimentacaoId"
                name="tipoMovimentacaoId"
              />
            </div>

            
            <div class="input-wrapper">
              <label for="valor">Valor?</label>
              <input type="number" id=<div class="input-wrapper">
                <label for="usuarioId">Usuário?</label>
                <input
                  type="number"
                  id="usuarioId"
                  name="usuarioId"
                />
              </div>"valor" name="valor" />
            </div>
            <br>

            <br>
            
            
            <br>
            <div class="input-wrapper">
              <label for="status">Situação? </label>
              <br>
              <input 
                type="radio"
                id="submetido" 
                name="status"
                value="submetido"/>
                <label for="submetido">Submetido</label><br>
                <input 
                type="radio"
                id="validado" 
                name="status"
                value="validado"/>
                <label for="validado">Validado</label><br>
            </div>

          </fieldset>
    
        </form>
      </main>

      <aside class="card">
        <img src="/images/usuario.svg" alt="Imagem de Pessoas">
        <p>
          
        </p>
        <div class="button-group">
          <button 
            class="button green" 
            form="form-movimentacao" 
            type="submit" 
            title="Salvar Dados">Salvar</button>
          <a 
            href="/movimentacao-index" 
            class="button gray">
            <img 
              src="/images/trash-24.svg" 
              alt="Cancelar cadastro" 
              title="Cancelar cadastro">
          </a>
        </div>
      </aside>
      
    </div>
