# ==================================
# Divino Alimento - Environment Variables
# ==================================

# -----------------------------------
# Application Environment
# -----------------------------------
# Options: 'production', 'development', 'test'
NODE_ENV="development"

# Base URLs
BASE_URL_APP="localhost"
BASE_URL_AUTH="localhost"

# -----------------------------------
# Ports Configuration
# -----------------------------------
# GraphQL API Port
GRAPHQL_PORT=13000

# Frontend Development Port
FRONTEND_PORT=8080

# Nginx Port (production)
NGINX_PORT=80

# -----------------------------------
# SSL Configuration
# -----------------------------------
# Set to 'true' to disable SSL (use http://)
# Leave empty or 'false' for SSL (https://)
NOT_USE_SSL=true

# -----------------------------------
# Database Configuration
# -----------------------------------
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="senha"
POSTGRES_DB="divinoalimento"
POSTGRES_HOST="db.dev"
POSTGRES_PORT=5432

# -----------------------------------
# OAuth 2.0 Configuration
# -----------------------------------
# For production, configure your OAuth provider
clientID=''
issuerBaseURL=''

# For development, authentication is mocked in the backend
# No additional OAuth configuration needed

# -----------------------------------
# Docker Configuration
# -----------------------------------
# User and Group IDs (set automatically by rake)
UID=1000
GID=1000

# -----------------------------------
# Frontend Configuration
# -----------------------------------
# GraphQL Endpoint for Frontend
VITE_GRAPHQL_ENDPOINT=http://localhost:13000/graphql
