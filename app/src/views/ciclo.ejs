  <body id="page-ciclo">

    <%- include('parts/page-header', { title: "Adicionar Novo Ciclo", back_link: "/ciclo-index"}) %> 

    <div class="container flex animate-up delay-2">
      <main>
        <form id="form-ciclo"
          method="POST"
          action="/ciclo" >
          <fieldset>
            <legend>Dados do Ciclo</legend>
            <div class="separator light"></div>

            <div class="input-wrapper">
              <label class="label-group" for="nome">Nome do ciclo?</label>
              <input type="text" id="nome" name="nome" />
            </div>


            <!-- cestas e quantidades -->
            <div class="button-group">
              <label class="label-group" for="cesta">Cesta(s) e quantidades que compor√£o este ciclo?</label>
              <a 
                 href="#"
                 id="filldetailsCesta"
                 onclick="addFieldsCesta()"
                 class="buttonAdicionarItem gray">
              <img 
                  src="/images/plus-24.svg" 
                  alt="Adicionar Tipo de Cesta" 
                  title="Adicionar Tipo de Cesta">
              </a>
            </div>
            <span id="containerCestas">

              <div id="divCesta1" class="input-group">

                  <div class="input-wrapper">
                    <label for="cestaId">Tipo</label>
                    <select name="cestaId1" id="cestaId1">
                      <% tiposCesta.forEach(tipoCesta => { %>
                        <option value="<%= tipoCesta.id %> "><%= tipoCesta.nome %></option>
                      <% }) %>
                    </select>
                  </div>
    
                  <div class="input-wrapper">
                    <label for="quantidadeCestas">Quantidade</label>
                    <input 
                      type="number"
                      id="quantidadeCestas1" 
                      name="quantidadeCestas1"/>
                  </div>           
    
              </div>
            </span>
            <!-- fim - cestas e quantidades -->


            
            <div class="input-wrapper">
              <label class="label-group" for="pontoEntregaId">Ponto de entrega?</label>
              <select name="pontoEntregaId" id="pontoEntregaId">
                <% pontosEntrega.forEach(pontoEntrega => { %>
                  <option value="<%= pontoEntrega.id %> "><%= pontoEntrega.nome %></option>
                <% }) %>
              </select>
            </div>

            <label class="label-group" for="oferta">Per√≠odo para oferta de produtos?</label>
            <div class="input-group">

              <div class="input-wrapper">
                <label for="ofertaInicio">In√≠cio</label>
                <input 
                  type="datetime-local"
                  id="ofertaInicio" 
                  name="ofertaInicio"/>
              </div>

              <div class="input-wrapper">
                <label for="ofertaFim">Fim</label>
                <input 
                  type="datetime-local"
                  id="ofertaFim" 
                  name="ofertaFim"/>
              </div>
            </div>


            <label class="label-group" for="compraItensAdicionais">Per√≠odo para compra de itens adicionais?</label>
            <div class="input-group">

              <div class="input-wrapper">
                <label for="itensAdicionaisInicio">In√≠cio</label>
                <input 
                  type="datetime-local"
                  id="itensAdicionaisInicio" 
                  name="itensAdicionaisInicio"/>
              </div>

              <div class="input-wrapper">
                <label for="itensAdicionaisFim">Fim</label>
                <input 
                  type="datetime-local"
                  id="itensAdicionaisFim" 
                  name="itensAdicionaisFim"/>
              </div>
            </div>

            <div class="button-group">
              <label class="label-group" for="entrega">Per√≠odo(s) para fornecedores entregarem seus produtos?</label>
              <a 
                 href="#"
                 id="filldetails"
                 onclick="addFields()"
                 class="buttonAdicionarItem gray">
              <img 
                  src="/images/plus-24.svg" 
                  alt="Adicionar Per√≠odo de Entrega" 
                  title="Adicionar Per√≠odo de Entrega">
              </a>
            </div>
            <span id="containerEntrega">
            <div id="divEntrega1" class="input-group">

              <div class="input-wrapper">
                <label for="entregaFornecedorInicio">In√≠cio</label>
                <input 
                  type="datetime-local"
                  id="entregaFornecedorInicio1" 
                  name="entregaFornecedorInicio1"/>
              </div>

              <div class="input-wrapper">
                <label for="entregaFornecedorFim">Fim</label>
                <input 
                  type="datetime-local"
                  id="entregaFornecedorFim1" 
                  name="entregaFornecedorFim1"/>
              </div>           

            </div>

            
            </span>

            
            <label class="label-group" for="retirada">Per√≠odo para consumidores retirarem suas cestas e produtos?</label>
            <div class="input-group">

              <div class="input-wrapper">
                <label for="retiradaConsumidorInicio">In√≠cio</label>
                <input 
                  type="datetime-local"
                  id="retiradaConsumidorInicio" 
                  name="retiradaConsumidorInicio"/>
              </div>

              <div class="input-wrapper">
                <label for="retiradaConsumidorFim">Fim</label>
                <input 
                  type="datetime-local"
                  id="retiradaConsumidorFim" 
                  name="retiradaConsumidorFim"/>
              </div>
            </div>

              

            
