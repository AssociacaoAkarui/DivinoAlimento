    <div class="container flex animate-up delay-2">
      <main>
        <form id="form-usuario"
          method="POST"
          action="/usuarionovo" >
          <fieldset>
            <legend>Criação de Conta</legend>
            <label>Informe seus dados e clique em ENVIAR</label>
            <div class="separator light"></div>

            <div class="input-wrapper">
              <label for="nome">Seu nome:</label>
              <% if (usuarioAtivo.name) { %>
                <input type="text" id="nome" name="nome" value="<%= usuarioAtivo.name %>" />
              <% } else { %>
                <input type="text" id="nome" name="nome" />
              <% } %>
            </div>
            <br>

            <br>
            <div class="input-wrapper">
              <label for="email">Conta gmail vinculada (não editável):</label>
              <% if (usuarioAtivo.email) { %>
                <input
                  type="text"
                  id="email"
                  name="email"
                  value="<%= usuarioAtivo.email %>"
                  readonly
                />
              <% } else { %>
                <input
                  type="text"
                  id="email"
                  name="email"
                  readonly
                />
              <% } %>
            </div>

            <br>
            <div class="input-wrapper">
                <label for="perfil">Selecione seu perfil(is): </label>
                <br>
                <input 
                  type="checkbox"
                  id="fornecedor" 
                  name="perfil"
                  value="fornecedor"/>
                  <label for="fornecedor">Fornecedor</label><br>
                  <input 
                  type="checkbox"
                  id="consumidor" 
                  name="perfil"
                  value="consumidor"/>
                  <label for="consumidor">Consumidor</label><br>
              </div>
              <!--<div class="form-check" id="perfil" name="perfil">
